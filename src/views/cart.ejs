<%- include('layout', { title: 'Carrito' , body: ` <h2 class="mb-4 text-center"><i class="bi bi-cart-fill"></i> Tu Talento-Cart</h2>
  <div id="cartLoading" class="text-center my-4">
    <div class="spinner-border text-primary" role="status"></div>
    <p class="mt-2 text-muted">Cargando carrito...</p>
  </div>

  <div id="cartContent" style="display:none;">
    <table class="table table-striped" id="cartTable">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cant.</th>
          <th>Subtotal</th>
          <th></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
    <div class="text-end">
      <h4>Total: $<span id="cartTotal">0</span></h4>
      <button id="checkoutBtn" class="btn btn-success mt-2" onclick="checkout()">
        <span class="label">Finalizar Compra</span>
        <span class="spinner-border spinner-border-sm ms-2 d-none" role="status"></span>
      </button>
    </div>

    <div class="mt-3">
      <a href="/" class="btn btn-secondary">Volver al Home</a>
    </div>
  </div>

  <!-- Modal de confirmación -->
  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title">Eliminar producto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          ¿Seguro que querés eliminar este producto del carrito?
        </div>

        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button id="confirmDeleteBtn" class="btn btn-danger">
            Eliminar
          </button>
        </div>

      </div>
    </div>
  </div>

