<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Muro de Mensajes</title>

  <!-- BOOTSTRAP -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

  <!-- Estilo propio -->
  <link rel="stylesheet" href="/css/posts.css">
</head>

<body class="bg-light">

  <div class="container py-4">
    <h2 class="text-center mb-4 fw-bold fs-1">ğŸ“Œ Muro de Mensajes</h2>

    <div class="text-end mb-3">
      <button class="btn btn-primary" onclick="openCreateModal()">
        <i class="bi bi-plus-circle"></i> Nuevo Mensaje
      </button>
    </div>

    <div id="loadingSpinner" class="text-center my-5">
      <div class="spinner-border text-light" style="width: 3rem; height: 3rem;"></div>
      <p class="text-white mt-2">Cargando mensajes...</p>
    </div>

    <!-- TABLERO DE POST-ITS -->
    <div id="postsBoard" class="posts-board d-none"></div>

  </div>

  <!-- MODAL CREAR -->
  <div class="modal fade" id="postModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title">Nuevo Post</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <form id="postForm">

            <input type="hidden" id="postId">

            <div class="mb-3">
              <label class="form-label">Nombre</label>
              <input id="postName" class="form-control" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Mensaje</label>
              <textarea id="postText" class="form-control" rows="3" required></textarea>
            </div>

            <button class="btn btn-success w-100">
              Guardar
            </button>

          </form>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Script propio -->
  <script src="/js/posts.js"></script>

</body>

</html>